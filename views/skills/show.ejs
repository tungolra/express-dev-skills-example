<!DOCTYPE html>
<html>
  <head>
    <title>Express Skills</title>
    <%- include('../partials/head.ejs'); %>
  </head>
  <body>
    <%- include('../partials/header.ejs'); %>
    <div class="container">
      <h3>Skill <%= skill.name %></h3>
      <h3>Complete: <%= skill.done ? "Yes" : "No" %></h3>
    </div>

    <div class="container">
      <a href="/skills/<%= skill.id %>/update"
        ><button type="submit">UPDATE</button></a
      >
      <form action="/skills/<%= skill.id %> ?_method=DELETE" method="POST">
        <button type="submit">DELETE</button>
      </form>
      <a class="back" href="/skills">Back to Skills Page</a>
      <%- include('../partials/footer.ejs'); %>
    </div>
  </body>
</html>
